<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <runtime>
    <gcServer enabled="true"/>
    <ThreadPool minThreads="50" />
    <!-- Improved DPI handling for .NET 9 -->
    <AppContextSwitchOverrides value="Switch.System.Windows.Forms.DoNotScaleForDpiChanges=false;Switch.System.Windows.Forms.EnableHighDpiAutoResizing=true" />
    <!-- Enable latest GC features -->
    <gcAllowVeryLargeObjects enabled="true"/>
    <gcConcurrent enabled="true"/>
  </runtime>
</configuration>
